<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="@dimen/px268"
        android:layout_height="@dimen/px338">

        <net.hunme.kidsworld_iptv.widget.RoundImageView
            android:layout_marginLeft="@dimen/px19"
            android:layout_marginTop="@dimen/px19"
            android:id="@+id/iv_gird"
            android:layout_width="@dimen/px230"
            android:layout_height="@dimen/px300"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_leimu"
            app:borderRadius="@dimen/round"
            app:type="round" />

        <ImageView
            android:layout_marginLeft="@dimen/px19"
            android:layout_marginTop="@dimen/px19"
            android:id="@+id/iv_corner"
            android:layout_width="@dimen/px80"
            android:layout_height="@dimen/px80"
            android:src="@mipmap/ic_corner" />

        <TextView
            android:padding="@dimen/px5"
            android:layout_marginLeft="@dimen/px19"
            android:id="@+id/tv_res_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_gird"
            android:layout_marginBottom="@dimen/space"
            android:background="@drawable/item_resources_number"
            android:gravity="center"
            android:text="第1集(1/32)"
            android:textColor="@color/white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px50"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="@dimen/space_x0.5"
        android:paddingRight="@dimen/space_x0.5"
        android:gravity="center_horizontal"
        android:text="音乐欣赏"
        android:textColor="@color/white_50"
        android:textSize="@dimen/ts_small" />
</LinearLayout>