<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/px10"
    android:orientation="vertical">

    <ImageView
        android:visibility="invisible"
        android:id="@+id/iv_menu_select"
        android:layout_width="@dimen/px235"
        android:layout_height="@dimen/px110"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_select_menu" />

    <TextView
        android:layout_marginTop="@dimen/px10"
        android:id="@+id/tv_menu"
        android:layout_width="@dimen/px210"
        android:layout_height="@dimen/px90"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="最新上架"
        android:textColor="@color/white_50"
        android:textSize="@dimen/ts_x_large" />
</RelativeLayout>