<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.hunme.kidsworld_iptv.fragment.CollectionFragment">

    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px90"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_move"
            style="@style/MyTextViewStyle"
            android:layout_width="@dimen/px250"
            android:layout_height="@dimen/px90"
            android:background="@drawable/home_menu_black_bg"
            android:text="动画坊"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_music"
            style="@style/MyTextViewStyle"
            android:layout_width="@dimen/px250"
            android:layout_height="@dimen/px90"
            android:layout_marginLeft="@dimen/space"
            android:background="@drawable/home_menu_black_20_bg"
            android:text="音悦台"
            android:textColor="@color/white_50" />

        <TextView
            android:id="@+id/tv_magic"
            style="@style/MyTextViewStyle"
            android:focusable="false"
            android:layout_width="@dimen/px350"
            android:layout_height="@dimen/px90"
            android:layout_marginLeft="@dimen/space"
            android:background="@drawable/home_menu_black_20_bg"
            android:text="魔法乐园（暂未开放）"
            android:textColor="@color/white_50" />
    </LinearLayout>

    <com.open.androidtvwidget.view.GridViewTV
        android:id="@+id/gv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/resources_grid_view_bg"
        android:columnWidth="@dimen/px268"
        android:gravity="center"
        android:horizontalSpacing="@dimen/px25"
        android:nextFocusLeft="@id/collection"
        android:numColumns="5"
        android:paddingLeft="@dimen/space_x1.5"
        android:paddingRight="@dimen/space_x1.5"
        android:paddingTop="@dimen/space_x2.5"
        android:scrollbars="none" />

    <com.open.androidtvwidget.view.MainUpView
        android:id="@+id/upview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
