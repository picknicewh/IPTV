<?xml version="1.0" encoding="utf-8"?><!--<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"--><!--android:layout_width="match_parent"--><!--android:layout_height="wrap_content"--><!--android:scrollbars="none">-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索结果"
        android:id="@+id/tv_sechar_tilte"
        android:textColor="@color/white"
        android:textSize="@dimen/ts_x_large"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/space"/>

    <TextView
        android:id="@+id/tv_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="专辑"
        android:layout_marginBottom="@dimen/space"
        android:textColor="@color/item_yellow" />

    <com.open.androidtvwidget.leanback.recycle.RecyclerViewTV
        android:id="@+id/rv_album"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px400"
        android:focusable="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="资源名称"
            android:textColor="@color/white" />

        <TextView
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="观看进度"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="所属专辑"
            android:textColor="@color/white" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/space"
        android:background="@mipmap/ic_dotted_line" />

    <net.hunme.kidsworld_iptv.widget.MyListView
        android:id="@+id/lv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@mipmap/ic_dotted_line"
        android:scrollbars="none" />
</LinearLayout><!--</ScrollView>-->