<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_main_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/px190"
    android:paddingRight="@dimen/px190">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="@dimen/px180"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px95"
            android:orientation="vertical">

            <net.hunme.kidsworld_iptv.widget.RoundImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px180"
                android:src="@mipmap/ic_leimu" />

            <TextView
                android:id="@+id/iv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px10"
                android:gravity="center"
                android:text="明明"
                android:textColor="@color/orange"
                android:textSize="@dimen/px35" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px40"
            android:layout_marginTop="@dimen/px95"
            android:orientation="vertical">
           <TextView
               android:id="@+id/tv_title"
               android:text="秋季运动会"
               android:textSize="@dimen/px48"
               android:textColor="@color/orange"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/iv_date"
                android:layout_alignParentRight="true"
                android:text="2016-11-14  09:19:18"
                android:textColor="@color/white_80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
             <TextView
                 android:id="@+id/tv_content"
                 android:layout_marginTop="@dimen/px60"
                 android:text="希望大家踊跃参加秋季运动会，提高运动成绩，全面发展德智体教育，相应国家号召，当一个尤为了国之栋梁"
                 android:layout_below="@+id/tv_title"
                 android:layout_width="match_parent"
                 android:textSize="@dimen/px30"
                 android:layout_height="wrap_content"
                 android:textColor="@color/white"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px500"
        android:clipChildren="false"
        android:gravity="center_horizontal"
        android:layerType="software"
        android:orientation="horizontal">
    <android.support.v4.view.ViewPager
        android:layout_gravity="center"
        android:id="@+id/vp_picture"
        android:layout_width="@dimen/px500"
        android:layout_height="wrap_content"
        android:clipChildren="false"/>
    </LinearLayout>
    <TextView
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/px24"
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>