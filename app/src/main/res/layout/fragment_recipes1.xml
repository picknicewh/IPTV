<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:orientation="vertical"
    tools:context="net.hunme.kidsworld_iptv.fragment.CollectionFragment">

    <LinearLayout
        android:id="@+id/ll_week"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px90"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/px300"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/space"
            android:text="一周食谱"
            android:textColor="@color/orange"
            android:textSize="@dimen/ts_xx_large" />

        <TextView
            android:id="@+id/tv_monday"
            style="@style/MyTextViewStyle"
            android:layout_width="@dimen/px200"
            android:layout_height="@dimen/px90"
            android:background="@drawable/home_menu_black_20_bg"
            android:text="周一"
            android:textColor="@color/white_50" />

        <TextView
            android:id="@+id/tv_tuesday"
            style="@style/MyTextViewStyle"
            android:layout_width="@dimen/px200"
            android:layout_height="@dimen/px90"
            android:layout_marginLeft="@dimen/space"
            android:background="@drawable/home_menu_black_20_bg"
            android:text="周二"
            android:textColor="@color/white_50" />


        <TextView
            android:id="@+id/tv_wednesday"
            style="@style/MyTextViewStyle"
            android:layout_width="@dimen/px200"
            android:layout_height="@dimen/px90"
            android:layout_marginLeft="@dimen/space"
            android:background="@drawable/home_menu_black_20_bg"
            android:text="周三"
            android:textColor="@color/white_50" />


        <TextView
            android:id="@+id/tv_thursday"
            style="@style/MyTextViewStyle"
            android:layout_width="@dimen/px200"
            android:layout_height="@dimen/px90"
            android:layout_marginLeft="@dimen/space"
            android:background="@drawable/home_menu_black_20_bg"
            android:text="周四"
            android:textColor="@color/white_50" />

        <TextView
            android:id="@+id/tv_friday"
            style="@style/MyTextViewStyle"
            android:layout_width="@dimen/px200"
            android:layout_height="@dimen/px90"
            android:layout_marginLeft="@dimen/space"
            android:background="@drawable/home_menu_black_20_bg"
            android:text="周五"
            android:textColor="@color/white_50" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/resources_grid_view_bg"
        android:orientation="vertical"
        android:gravity="center">

        <RelativeLayout
            android:gravity="center"
            android:layout_margin="@dimen/px10"
            android:focusable="true"
            android:id="@+id/rl_params"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>